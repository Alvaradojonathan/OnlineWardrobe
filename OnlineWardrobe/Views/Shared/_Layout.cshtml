<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Closet Organizer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Closet Organizer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Tops", "Tops", "WardrobeItems")</li>
                    <li>@Html.ActionLink("Bottoms", "Bottoms", "WardrobeItems")</li>
                    <li>@Html.ActionLink("Shoes", "Shoes", "WardrobeItems")</li>
                    <li>@Html.ActionLink("Accessories", "Accessories", "WardrobeItems")</li>
                </ul>
            </div>
        </div>
    </div>
    <div id="TopOfPage" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <a href="#TopOfPage">Back to top</a>
            </div>
            <div class="row panel-footer footerStyle">
                <div class="col-md-4">
                    <h4>Contact</h4>
                    <h6 class="glyphicon glyphicon-phone-alt"> (555)555-1212</h6>
                    <br />
                    <h6 class="glyphicon glyphicon-envelope"> Support@closetorganizer.com</h6>
                </div>
                <div class="col-md-4">
                    <h4>Get to Know Us</h4>
                    <a href="/Home/About">About Us</a>
                </div>
                <div class="col-md-4">
                    <h4>Contact</h4>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
